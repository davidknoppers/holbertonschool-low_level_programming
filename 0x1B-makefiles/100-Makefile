SRC = main.c holberton.c

CC = gcc

CFLAGS = -Wall -Werror -Wextra -pedantic

OBJ = $(SRC:.c=.o)

NAME = holberton

#no rm?
#RM = rm

all: $(SRC) $(NAME)

$(NAME): m.h $(OBJ)
	$(CC) $(OBJ) -o $@

.PHONY: clean oclean fclean all re $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
